<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Noobsenger.MAUI.Views.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout
        VerticalOptions="FillAndExpand"
			Padding="18"
			HorizontalOptions="Center">
        <Label
				FontSize="32"
				Text="Login" />
        <StackLayout
				Margin="0,6,0,0"
				Orientation="Horizontal">
            <Label
            FontSize="Default"
					Text="Username: "
					VerticalOptions="Center"
					WidthRequest="100" />
            <Entry
                    Keyboard="Numeric"
                    WidthRequest="100"
                    x:Name="nbrPort" />
        </StackLayout>
        <StackLayout
				Orientation="Horizontal">
            <Label
            FontSize="Default"
					Text=": "
					WidthRequest="100"
					VerticalOptions="Center" />
            <Picker
					WidthRequest="200"
					x:Name="cmbxIps" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>