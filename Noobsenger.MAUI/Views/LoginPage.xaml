<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Noobsenger.MAUI.Views.LoginPage"
             Title="LoginPage">
    <VerticalStackLayout
        VerticalOptions="FillAndExpand"
			Padding="18"
        Spacing="4"
			HorizontalOptions="Center">
        <Label
				FontSize="32"
				Text="Login" />
        <HorizontalStackLayout>
            <Label
            FontSize="Default"
					Text="Username"
					WidthRequest="75"
					VerticalOptions="Center" />
            <Entry
					MinimumWidthRequest="200"
                    x:Name="txtUsername" />
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label
            FontSize="Default"
					Text="Avatar "
					WidthRequest="75"
					VerticalOptions="Center" />
            <Picker
                SelectedIndexChanged="cmbxAvatar_SelectedIndexChanged"
					WidthRequest="200"
					x:Name="cmbxAvatar" />
        </HorizontalStackLayout>
        <Image Margin="0,12,0,0" WidthRequest="150" HorizontalOptions="Center" x:Name="img"/>
    </VerticalStackLayout>
</ContentPage>